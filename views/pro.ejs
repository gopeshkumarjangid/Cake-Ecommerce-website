<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sweet Bites - Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function toggleDropdown(id) {
            document.getElementById(id).classList.toggle("hidden");
        }

        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("-translate-x-full");
            document.getElementById("overlay").classList.toggle("hidden");
        }
    </script>
</head>

<body class="bg-gradient-to-r from-pink-50 to-yellow-50 font-sans">

    <% if(success.length> 0){ %>
        <div id="flashMessage"
            class="absolute top-5 left-1/2 transform -translate-x-1/2 bg-pink-500 text-white px-6 py-3 rounded-md shadow-lg transition-opacity duration-700 opacity-100">
            <%= success %>
        </div>

        <script>
            setTimeout(() => {
                const flash = document.getElementById('flashMessage');
                if (flash) {
                    flash.classList.add('opacity-0');
                    setTimeout(() => flash.remove(), 700);
                }
            }, 1000);
        </script>
        <% } %>

            <!-- Mobile Navbar -->
            <div
                class="lg:hidden flex items-center justify-between p-4 bg-white shadow-md fixed top-0 left-0 right-0 z-50">
                <h1 class="text-xl font-bold text-pink-600">Sweet Bites</h1>
                <div class="flex items-center gap-3">
                    <a href="/cart" class="bg-pink-500 text-white px-3 py-1 rounded-lg hover:bg-pink-600">ðŸ›’ Cart</a>
                    <button onclick="document.getElementById('sidebar').classList.toggle('-translate-x-full')"
                        class="p-2 rounded-md bg-pink-500 text-white">â˜°</button>
                </div>
            </div>

            <!-- Overlay (for mobile sidebar) -->
            <div id="overlay"
                class="hidden fixed inset-0 bg-black bg-opacity-40 z-40 lg:hidden transition-opacity duration-300"
                onclick="toggleSidebar()"></div>

            <!-- Sidebar -->
            <aside id="sidebar"
                class="w-64 bg-white shadow-lg p-6 flex flex-col justify-between fixed top-0 left-0 h-full transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-50">
                <div>
                    <!-- Close button (mobile only) -->
                    <div class="flex items-center justify-between mb-6 lg:hidden">
                        <img src="https://cdn-icons-png.flaticon.com/512/2769/2769603.png" alt="Cake Logo"
                            class="w-10 h-10">
                        <h1 class="text-2xl font-bold text-pink-600">Sweet Bites</h1>
                        <button onclick="toggleSidebar()"
                            class="text-gray-600 hover:text-red-500 text-2xl">&times;</button>
                    </div>

                    <div class="hidden lg:flex items-center space-x-2 mb-6">
                        <img src="https://cdn-icons-png.flaticon.com/512/2769/2769603.png" alt="Cake Logo"
                            class="w-10 h-10">
                        <h1 class="text-2xl font-bold text-pink-600">Sweet Bites</h1>
                    </div>

                    <h2 class="text-xl font-bold text-pink-600 mb-4">Shop Filters</h2>
                    <div class="space-y-3">
                        <div>
                            <button onclick="toggleDropdown('sortBy')"
                                class="w-full flex justify-between font-semibold text-gray-700 hover:text-pink-500">
                                Sort By <span>â–¼</span>
                            </button>
                            <ul id="sortBy" class="hidden ml-3 mt-1 text-gray-600 space-y-1">
                                <li><a href="#">Popularity</a></li>
                                <li><a href="#">Price: Low to High</a></li>
                                <li><a href="#">Price: High to Low</a></li>
                            </ul>
                        </div>
                        <div>
                            <button onclick="toggleDropdown('newCollection')"
                                class="w-full flex justify-between font-semibold text-gray-700 hover:text-pink-500">
                                New Collection <span>â–¼</span>
                            </button>
                            <ul id="newCollection" class="hidden ml-3 mt-1 text-gray-600 space-y-1">
                                <li><a href="#">2025 Specials</a></li>
                                <li><a href="#">Seasonal Cakes</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div>
                    <a href="/" class="block text-center bg-red-500 text-white py-2 rounded-lg hover:bg-red-600">
                        Logout
                    </a>
                </div>
            </aside>

            <!-- Products Grid -->
            <main class="lg:ml-64 p-6 pt-20 lg:pt-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-pink-600">Our Products</h2>
                    <a href="/cart"
                        class="hidden lg:block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-pink-600">ðŸ›’
                        Cart</a>
                </div>

                <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% if (products && products.length> 0) { %>
                        <% products.forEach(function(product){ const pct=Number(product.discount) || 0; const
                            price=Number(product.price) || 0; const discounted=Math.round(price - (price * pct / 100));
                            const bg=product.bgcolor || '#ffffff' ; const text=product.textcolor || '#1f2937' ; %>

                            <div class="rounded-xl shadow-md hover:shadow-lg transition flex flex-col overflow-hidden"
                                style="background:<%= bg %>">

                                <div class="relative flex items-center justify-center h-35 bg-white">
                                    <% if (pct> 0) { %>
                                        <span
                                            class="absolute top-2 left-2 text-xs font-semibold px-2 py-1 rounded-full bg-red-500 text-white">-
                                            <%= pct %>%
                                        </span>
                                        <% } %>
                                            <img src="<%= product.image %>" alt="<%= product.name %>"
                                                class="h-28 w-30 object-cover shadow-sm" />
                                </div>

                                <div class="p-2 flex-1 flex flex-col justify-between" style="color:<%= text %>">
                                    <h3 class="font-semibold text-lg truncate">
                                        <%= product.name %>
                                    </h3>

                                    <% if (pct> 0) { %>
                                        <div class="mt-1 flex items-baseline gap-2">
                                            <span class="text-xl font-bold text-pink-600">â‚¹<%= discounted %></span>
                                            <span class="text-sm line-through text-gray-500">â‚¹<%= product.price %>
                                            </span>
                                        </div>
                                        <% } else { %>
                                            <div class="mt-1">
                                                <span class="text-xl font-bold text-pink-600">â‚¹<%= product.price %>
                                                </span>
                                            </div>
                                            <% } %>

                                                <a href="/addtocart/<%= product._id %>">
                                                    <!-- Mobile button (circle +) -->
                                                    <button
                                                        class="lg:hidden w-7 h-7 flex items-center justify-center rounded-full bg-pink-500 text-white text-base font-bold shadow-md">
                                                        +
                                                    </button>


                                                    <!-- Desktop button (Add to cart) -->
                                                    <button
                                                        class="hidden lg:flex w-1/2 mt-1 h-7 items-center justify-center rounded-lg bg-pink-500 text-white text-sm transition hover:bg-pink-600">
                                                        + Add to cart
                                                    </button>
                                                </a>

                                </div>
                            </div>

                            <% }) %>
                                <% } else { %>
                                    <p class="text-gray-500">No products available.</p>
                                    <% } %>
                </div>
            </main>

</body>

</html>